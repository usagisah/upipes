{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vitest/globals"],
    /* Linting */
    "strict": true
  },
  "include": ["src"]
}
